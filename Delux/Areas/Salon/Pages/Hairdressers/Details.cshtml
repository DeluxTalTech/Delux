@page
@using global::Delux.Aids
@using global::Delux.Data.Treatment
@using global::Delux.Pages.Extensions
@model Delux.Areas.Salon.Pages.Hairdressers.DetailsModel

@{
    Layout = "_Details";
    const string hairTreatments = "/Treatments/HairTreatments";
    var id = GetMember.Name<HairTreatmentData>(x => x.Id);
}


<body>

@Html.DisplayControlsFor(m => m.Item.Name)
@Html.DisplayControlsFor(m => m.Item.Definition)
@Html.DisplayControlsFor(m => m.Item.AvailableDays)
@Html.DisplayControlsFor(m => m.Item.WorkedYears)
</body>

@section Details {
    @Html.HypertextLinkFor(string.Empty, new Link("Show treatments",
        $"{hairTreatments}/Index?fixedFilter={id}&fixedValue={Model.Item.Id}"))
}